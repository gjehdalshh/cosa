<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.cosa.user.mapper.UserMapper">

	<select id="selectId" resultType="int">
		select * from user where user_id
		= ${user_id};
	</select>
	
	<select id="selectPh" resultType="int">
		select * from user where user_phone
		= ${user_phone};
	</select>

	<insert id="insUser">
		INSERT INTO user(user_id, user_pw, user_nm,
		user_phone) VALUES (${user_id}, ${user_pw}, ${user_nm}, ${user_phone});
	</insert>
</mapper>